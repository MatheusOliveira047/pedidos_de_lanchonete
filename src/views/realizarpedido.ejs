<!DOCTYPE html>
<html lang="pt-br">
<head>
    <%- include('partials/head.ejs') %> 
</head>
<body>
    <%- include('partials/navbar.ejs') %> 

    <main class="center">
        <div class="container_center">
            <h1>Realizar um novo Pedido</h1>

            <h2><% if(typeof msg !== 'undefined') { %>
                <%=msg %> 
            <% } %></h2>

            <form action="/realizarpedido" method="post" class="form" id="formPedidos">
                <div>
                    <select  name="codigoDoCliente" id="codigoDoCliente">
                        <option value="" selected>--Selecione o Cliente</option>
                        <% clientes.forEach(cliente => { %>
                         <option value="<%= cliente._id %> "><%= cliente.name  %> </option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <select name="codigoDoProduto" id="codigoDoProduto">
                        <option value="" selected>--Selecione o Produto</option>
                        <% produtos.forEach(produto => { %>
                         <option value="<%= produto._id %> "><%= produto.name  %> </option>
                        <% }) %>
                    </select>
                </div>
                <div>
                    <label>
                        Data do Pedido: <input type="date" name="data" id="data">
                    </label>
                </div>
                <div>
                    <select name="status" id="status">
                        <option selected value="pendente">Pendente</option>
                    </select>
                </div>


                <button type="submit">Realizar Pedidos</button>
            </form>


        </div>
    </main>

    <script src="js/validacaoPedidos.js"></script>
    <%- include('partials/script.ejs') %> 
</body>
</html>